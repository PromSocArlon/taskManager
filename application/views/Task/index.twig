<br>
<h1>Task</h1>
<hr>

<div class="row">
    <div class="col-sm">
        <h3>Index</h3>
    </div>
    <div class="col-sm-2">
        <a href="?controller=task&action=create" class="btn btn-success">Create a new task</a>
    </div>
</div>

<br><br>

<div class="row">
    <div class="col-sm">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Priority</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit</th>
                    <th scope="col">View</th>
                </tr>
            </thead>

            <tbody>
                {% if tasks is empty %}
                    <tr>
                        <th><p><i>No tasks created yet.</i></p></th>
                    </tr>
                {% endif %}

                {% for item in tasks %}
                    <tr>
                        <th>{{ item.id }}</th>
                        <th>{{ item.name }}</th>
                        <th>{{ item.priority }}</th>
                        <th>{{ item.description }}</th>
                        <th>{{ item.status }}</th>
                        <th>
                            <a href="?controller=task&action=edit&id={{ item.id }}" class="btn btn-primary">Edit</a>
                        </th>
                        <th>
                            <a href="?controller=task&action=read&id={{ item.id }}" class="btn btn-secondary">View</a>
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

