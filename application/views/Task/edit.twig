<h1>Task</h1>
<hr>
<h3>Edit</h3>

<br>

<form method="POST" action="?controller=task&action=update">

    <div class="form-group">
        <label for="taskId">Number:</label>
        <input type="text" class="form-control" value={{ task.id }} name="id" readonly>
    </div>
    <div class="form-group">
        <label for="taskName">Name:</label>
        <input type="text" class="form-control" value={{ task.name }} name="name" required>
    </div>
    <div class="form-group">
        <label for="taskPriority">Priority:</label>
        <input type="text" class="form-control" value={{ task.priority }} name="priority" required>
    </div>
    <div class="form-group">
        <label for="taskDescription">Description:</label>
        <input type="text" class="form-control" value={{ task.description }} name="description" required>
    </div>
    <div class="form-group">
        <label for="taskStatus">Status:</label>
        <select name="status" id="taskStatus" class=form-control">
            <option value="{{ constant('app\\models\\Entity\\TaskStatus::PENDING') }}" {% if task.status == constant('app\\models\\Entity\\TaskStatus::PENDING') %} selected {% endif %} > {{ constant('app\\models\\Entity\\TaskStatus::PENDING') }} </option>
            <option value="{{ constant('app\\models\\Entity\\TaskStatus::PLANNED') }}" {% if task.status == constant('app\\models\\Entity\\TaskStatus::PLANNED') %} selected {% endif %} > {{ constant('app\\models\\Entity\\TaskStatus::PLANNED') }} </option>
            <option value="{{ constant('app\\models\\Entity\\TaskStatus::IN_PROGRESS') }}" {% if task.status == constant('app\\models\\Entity\\TaskStatus::IN_PROGRESS') %} selected {% endif %} > {{ constant('app\\models\\Entity\\TaskStatus::IN_PROGRESS') }} </option>
            <option value="{{ constant('app\\models\\Entity\\TaskStatus::COMPLETED') }}" {% if task.status == constant('app\\models\\Entity\\TaskStatus::COMPLETED') %} selected {% endif %} > {{ constant('app\\models\\Entity\\TaskStatus::COMPLETED') }} </option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
</form>

